{
  "name": "smart-buy",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "10.6.0"
  },
  "main": "server/index.js",
  "scripts": {
    "start": "node .",
    "build": "browserify -g uglifyify -t babelify client/ -o server/public/main.js",
    "watch:server": "nodemon .",
    "watch:client": "watchify -vd -t babelify client/ -o server/public/main.js",
    "watch:public": "browser-sync start -c browser-sync.js",
    "watch": "npm-run-all --parallel watch:*",
    "postinstall": "npm run build",
    "test": "jest --coverage"
  },
  "babel": {
    "plugins": [
      "transform-react-jsx",
      "transform-es2015-modules-commonjs",
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "server/"
    ],
    "ignore": [
      "server/public/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darylwada/smart-buy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "3.0.0",
    "body-parser": "1.18.3",
    "chart.js": "^2.7.2",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "jest": "^23.4.2",
    "jsonwebtoken": "8.3.0",
    "mongodb": "3.1.1",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-tooltip": "^3.6.1",
    "reactstrap": "6.3.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babelify": "8.0.0",
    "browser-sync": "2.24.5",
    "browserify": "16.2.2",
    "nodemon": "1.18.3",
    "npm-run-all": "4.1.3",
    "uglifyify": "5.0.1",
    "watchify": "3.11.0"
  },
  "bugs": {
    "url": "https://github.com/darylwada/smart-buy/issues"
  },
  "homepage": "https://github.com/darylwada/smart-buy#readme"
}
